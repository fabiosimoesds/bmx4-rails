<header class="header">
  <div class="header__contact-info">
    <i class="fa-solid fa-phone color--secondary mr--2"></i> (11) 5555-5555<span class="mx--4">|</span><i class="fa-solid fa-envelope color--secondary mr--2"></i> info@bmx4.com.br <span class="mx--4">|</span> <i class="fa-solid fa-clock color--secondary mr--2"></i> Seg-Sex: 08h - 18h
  </div>

  <nav id="site-navigation" class="main-navigation" role="navigation" data-controller="menu" data-action="click@window->menu#closeOutside">
    <%= link_to templates_engine_path, class: 'header__site-link' do %>
      <h1 class="header__site-title">BMX4</h1>
    <% end %>

    <button class="menu-toggle hamburger hamburger--mobile-only hamburger--spin" type="button" data-action="click->menu#toggleHamburger">
      <span class="hamburger-box">
        <span class="hamburger-inner"></span>
      </span>
    </button>

    <ul id="primary-menu" class="menu">
      <li class="menu-item">
        <a class="primary-menu__link">Dashboard</a>
      </li>

      <li class="menu-item menu-item--sub">
        <div class="primary-menu__link" data-action="click->menu#toggleSubMenu">
          Multiple Options<i class="menu-item__chevron ml--2 fa-solid fa-sm fa-chevron-down"></i>
        </div>

        <ul class="menu menu--sub">
          <li class="menu-item menu-item--active">
            <a>Option 1</a>
          </li>

          <li class="menu-item">
            <a>Option 2</a>
          </li>
        </ul>
      </li>
    </ul>
  </nav>
</header>

<header class="header">
  <nav id="site-navigation" class="main-navigation" role="navigation" data-controller="menu" data-action="click@window->menu#closeOutside">
    <%= link_to root_path, class: 'header__site-link' do %>
      <h1 class="header__site-title">BMX4</h1>
    <% end %>

    <button class="menu-toggle hamburger hamburger--mobile-only hamburger--spin" type="button" data-action="click->menu#toggleHamburger">
      <span class="hamburger-box">
        <span class="hamburger-inner"></span>
      </span>
    </button>

    <ul id="primary-menu" class="menu">
      <%= active_link_to 'Users', root_path, active: [['admin/accounts'], []], wrap_tag: :li, wrap_class: 'menu-item', class: 'primary-menu__link', class_active: 'menu-item--active' %>

      <li class="menu-item hidden--lg-up">
        <%= button_to 'Logout', destroy_account_session_path, method: :delete, class: 'primary-menu__link button--link', form_class: 'w--100pc' %>
      </li>
    </ul>

    <ul class="menu user-menu">
      <li class="menu-item menu-item--sub">
        <div class="user__name" data-action="click->menu#toggleSubMenu">
          <%= current_account.name %><i class="menu-item__chevron ml--2 fa-solid fa-chevron-down"></i>
        </div>

        <ul class="menu menu--sub">
          <li class="menu-item">
            <%= button_to 'Logout', destroy_account_session_path, method: :delete, class: 'button--link' %>
          </li>
        </ul>
      </li>
    </ul>
  </nav>
</header>

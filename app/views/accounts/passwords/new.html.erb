<% provide(:title, 'Forgot Password') %>

<div class="onboarding__modal">
  <div class="onboarding__image"></div>

  <div class="onboarding__body">
    <%= image_tag 'logos/logo_full', class: 'w--10em' %>

    <h3 class="mt--4 mb--0">Reset Your Password <span class="emoji emoji-lock-and-key"></span></h3>
    <p class="-font-size--1 font--light line-height--tight">Enter your email, and we'll send you instructions on how to reset your password</p>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'py--4' }) do |f| %>
      <%= f.error_notification %>

      <div class="form__inputs">
        <%= f.input :email,
                    label: 'Email Address',
                    required: true,
                    autofocus: true,
                    wrapper_html: { class: 'form__input form__input--s2-m4-l12' },
                    input_html: { autocomplete: 'email' } %>
      </div>

      <div class="form__actions">
        <%= f.submit 'Send Reset Instructions', class: 'button--wide button--primary' %>
      </div>
    <% end %>

    <div class="mt--8 -font-size--1">Remember your password? <%= link_to 'Log In', new_session_path(resource_name) %></div>
  </div>
</div>



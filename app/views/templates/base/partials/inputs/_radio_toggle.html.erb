<div class="enum_radio_buttons slider_radios form__input <%= local_assigns[:wrapper_classes] %> <%= 'field--errors' if local_assigns[:errors] %> <%= 'disabled' if local_assigns[:disabled] %>" <%= tag.attributes(local_assigns[:wrapper_extra_attributes]) %>>
  <label class="string enum_radio_buttons <%= 'required' if local_assigns[:required] %> <%= local_assigns[:label_classes] %>"><%= local_assigns[:label] %></label>
  <div class="input-field">
    <input type="hidden" name="<%= id %>" autocomplete="off" <%= :disabled if local_assigns[:disabled] %>>
    <% options.each do |option_value, option_label| %>
      <span class="radio">
        <input class="string enum_radio_buttons <%= local_assigns[:input_classes] %>" type="radio" value="<%= option_value %>" name="<%= id %>" id="<%= id %>_<%= option_value %>" <%= :disabled if local_assigns[:disabled] %> <%= tag.attributes(local_assigns[:input_extra_attributes]) %>>
        <label class="collection_radio_buttons" for="<%= id %>_<%= option_value %>"><%= option_label %></label>
      </span>
    <% end %>
  </div>

  <% if local_assigns[:errors] %>
    <span class="form__hint form__hint--error"><%= errors %></span>
  <% elsif local_assigns[:hint] %>
    <span class="form__hint"><%= hint %></span>
  <% end %>
</div>

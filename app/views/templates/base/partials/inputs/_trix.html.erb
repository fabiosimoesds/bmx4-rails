<div class="rich_text_area form__input <%= local_assigns[:wrapper_classes] %> <%= 'field--errors' if local_assigns[:errors] %> <%= 'disabled' if local_assigns[:disabled] %>" <%= tag.attributes(local_assigns[:wrapper_extra_attributes]) %>>
  <label class="form__label <%= 'required' if local_assigns[:required] %> <%= local_assigns[:label_classes] %>" for="<%= id %>"><%= local_assigns[:label] %></label>
  <input id="<%= id %>" type="hidden" name="<%= id %>" value="<%= local_assigns[:value] %>" <%= tag.attributes(local_assigns[:input_extra_attributes]) %>>
  <!-- can't disable toolbar without rendering it explicitly -->
  <trix-editor input="<%= id %>" aria-invalid="<%= local_assigns[:errors] %>" contenteditable="<%= 'false' if local_assigns[:disabled] %>"></trix-editor>

  <% if local_assigns[:errors] %>
    <span class="form__hint form__hint--error"><%= errors %></span>
  <% elsif local_assigns[:hint] %>
    <span class="form__hint"><%= hint %></span>
  <% end %>
</div>

<div class="select form__input <%= local_assigns[:wrapper_classes] %> <%= 'field--errors' if local_assigns[:errors] %> <%= 'disabled' if local_assigns[:disabled] %>" <%= tag.attributes(local_assigns[:wrapper_extra_attributes]) %>>
  <label class="select <%= 'required' if local_assigns[:required] %> <%= local_assigns[:label_classes] %>" for="<%= id %>"><%= local_assigns[:label] %></label>
  <div class="input-field input-field--select input-field--select2">
    <select id="<%= id %>" data-select2-target="multi" class="select select2--multi" multiple="multiple" aria-invalid="<%= local_assigns[:errors] %>" <%= :disabled if local_assigns[:disabled] %> <%= tag.attributes(local_assigns[:input_extra_attributes]) %>>
      <% options.each do |option_value, option_label| %>
        <option value="<%= option_value %>"><%= option_label %></option>
      <% end %>
    </select>
  </div>

  <% if local_assigns[:errors] %>
    <span class="form__hint form__hint--error"><%= errors %></span>
  <% elsif local_assigns[:hint] %>
    <span class="form__hint"><%= hint %></span>
  <% end %>
</div>
